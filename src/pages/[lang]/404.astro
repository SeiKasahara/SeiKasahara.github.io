---
import type { GetStaticPaths } from "astro";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { languages, useTranslations, type Lang } from "@/i18n";

export const getStaticPaths: GetStaticPaths = async () => {
	return Object.keys(languages).map((lang) => ({
		params: { lang },
	}));
};

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);
---
<MainGridLayout title={t('error.notFound')} description={t('error.notFoundDesc')} lang={lang}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-[50vh]">
        <div class="card-base z-10 px-9 py-12 relative w-full flex flex-col items-center justify-center text-center">
            <h1 class="text-8xl font-bold text-[var(--primary)] mb-4">404</h1>
            <p class="text-2xl text-neutral-700 dark:text-neutral-300 mb-2">{t('error.notFoundDesc')}</p>
            <p class="text-lg text-neutral-500 dark:text-neutral-400 mb-8">(＞人＜；)</p>
            <a href={`/${lang}/`} class="btn-regular px-6 py-3 rounded-lg bg-[var(--primary)] text-white hover:opacity-90 transition">
                {t('error.backHome')}
            </a>
        </div>
    </div>
</MainGridLayout>
