---
import type { GetStaticPaths } from "astro";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import Giscus from "@components/misc/Giscus.astro";
import { languages, useTranslations, type Lang } from "@/i18n";

export const getStaticPaths: GetStaticPaths = async () => {
	return Object.keys(languages).map((lang) => ({
		params: { lang },
	}));
};

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);
---
<MainGridLayout title={t('page.messages')} description={t('page.messagesDesc')} lang={lang}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full">
            <img
                src="/images/banner/aya.jpg"
                alt="Message Board Banner"
                class="w-full h-48 object-cover rounded-lg mb-6"
            />
            <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">{t('page.messages')}</h2>
            <p class="text-neutral-600 dark:text-neutral-400 mb-6">
                {t('page.messagesDesc')}
            </p>

            <!-- Giscus Comment System -->
            <div class="giscus-wrapper mt-6">
                <Giscus />
            </div>
        </div>
    </div>
</MainGridLayout>
